{
    "name": "pokemon-explorer-app",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "description": "A modern React TypeScript Pokemon explorer with Redux Toolkit and RTK Query",
    "scripts": {
        "dev": "vite",
        "dev:local": "VITE_POKEMON_API_BASE_URL=http://localhost:3001/api vite",
        "dev:staging": "VITE_POKEMON_API_BASE_URL=https://staging-pokeapi.co/api/v2 vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ui": "jest --watch --verbose",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint . --ext ts,tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css,md}\"",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^2.0.1",
        "clsx": "^2.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^9.0.4",
        "react-router-dom": "^6.20.1",
        "redux-persist": "^6.0.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.1.5",
        "@testing-library/react": "^14.1.2",
        "@testing-library/user-event": "^14.5.1",
        "@types/jest": "^29.5.8",
        "@types/react": "^18.2.37",
        "@types/react-dom": "^18.2.15",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "@vitejs/plugin-react": "^4.1.1",
        "autoprefixer": "^10.4.16",
        "eslint": "^8.53.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.4",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "postcss": "^8.4.31",
        "prettier": "^3.1.0",
        "tailwindcss": "^3.3.5",
        "typescript": "^5.2.2",
        "vite": "^4.5.0"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    }
}
